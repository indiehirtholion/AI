#pip install -U langchain-ollama

from langchain_ollama import OllamaLLM

def main():
    # Initialize the Ollama model
    llm = OllamaLLM(model="mistral")  # Any Ollama model will probably work here... 
    
    # Run a simple query using the new `.invoke()` method
    response = llm.invoke("What is the capital of Canada? Respond with a one word answer!")
    print(response)

if __name__ == "__main__":
    main()
